<div class="panel-body">
  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: {method: :post}) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <div class="columns">
      <div class="column column-rosa"></div>
      <div class="column">
        <h1 class="title title-white">Esqueceu sua senha?</h1>
        <div class="field field-login">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input input-login is-rounded", placeholder: "E-mail" %>
        </div>
        <div class="actions">
          <%= f.submit "Redefinir senha", :class => 'button is-rounded bt-block' %>
        </div>
  <% end %>
  <%= render "devise/shared/links" %>

  </div>
  <div class="column column-rosa"></div>
  </div>
</div>
