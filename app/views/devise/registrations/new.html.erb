<div class="box coluna-azul box-registro">

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource, style: "color: white;" %>
    <h1 class="title title-white">Novo Usu√°rio</h1>
    <div class="field field-login">
      <%= f.text_field :nome, class: "input is-rounded input-login", placeholder: "Nome" %>
    </div>
    <div class="field field-login">
      <%= f.text_field :sobrenome, class: "input is-rounded input-login", placeholder: "Sobrenome" %>
    </div>
    <div class="field field-login">
      <%= f.text_field :celular, class: "input is-rounded input-login", placeholder: "Celular" %>
    </div>

    <div class="field field-login">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input is-rounded input-login", placeholder: "E-mail" %>
    </div>

    <div class="field field-login">
      <%= f.password_field :password, autocomplete: "password", class: "input is-rounded input-login", placeholder: "Senha" %>
    </div>

    <div class="field field-login">
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "input is-rounded input-login", placeholder: "Confirme a senha" %>
    </div>
    <div class="actions">
      <%= f.submit "Cadastrar", class: "button is-rounded bt-block" %>
    </div>
    <%= render "devise/shared/links" %>
  <% end %>
</div>

</div>
