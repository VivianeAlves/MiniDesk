<div class="box coluna-azul box-login">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name), class: "is-mobile") do |f| %>
    <h1 class="title title-white">LOGIN</h1>
    <% if alert %>
      <div id="alert"><%= alert%></div>
    <% end %>
    <div id="botoes-login">
      <div class="field field-login">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input is-rounded input-login", placeholder: "E-mail" %>
      </div>

      <div class="field field-login">
        <%= f.password_field :password, autocomplete: "current-password", class: "input is-rounded input-login", placeholder: "Senha" %>
      </div>
      <div class="actions">
        <%= f.submit "Entrar", :class => 'button is-rounded bt-block' %>
      </div>
      <% if devise_mapping.rememberable? %>
        <div class="field" style="padding-left: 25px; color: white">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end %>
      <%= render "devise/shared/links" %>
  <% end %>
  </div>
</div>